<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được chọn -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- Màu khi được chọn -->
            <corners android:radius="10dp" />   <!-- Bo tròn góc -->
        </shape>
    </item>
    <!-- Trạng thái khi không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />  <!-- Màu khi không được chọn -->
            <stroke android:color="#FF6200EE" android:width="2dp" /> <!-- Viền -->
            <corners android:radius="10dp" />  <!-- Bo tròn góc -->
        </shape>
    </item>
</selector>